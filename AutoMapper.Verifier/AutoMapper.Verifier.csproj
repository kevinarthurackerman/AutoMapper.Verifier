<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netcoreapp2.0;net40</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.1.1</Version>
    <Authors>Kevin Ackerman</Authors>
    <Company />
    <Description>Quickly and simply make sure you have all the AutoMapper mappings you need, and none of the mappings that you do not need.</Description>
    <Copyright>MIT</Copyright>
    <PackageId>AutoMapperVerifier</PackageId>
    <RepositoryUrl>https://github.com/kevinarthurackerman/automapper.verifier</RepositoryUrl>
    <PackageTags>automapper</PackageTags>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/kevinarthurackerman/automapper.verifier</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Mono.Cecil" Version="0.10.0" />
  </ItemGroup>

</Project>
